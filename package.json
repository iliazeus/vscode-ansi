{
  "name": "vscode-ansi",
  "publisher": "iliazeus",
  "displayName": "ANSI Colors",
  "description": "ANSI color styling for text documents",
  "version": "1.1.8",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/iliazeus/vscode-ansi"
  },
  "bugs": {
    "url": "https://github.com/iliazeus/vscode-ansi/issues",
    "email": "ilia.pozdnyakov@ya.ru"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Themes",
    "Visualization"
  ],
  "keywords": [
    "ansi",
    "escapes",
    "colors",
    "logs"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "iliazeus.vscode-ansi.showPretty",
        "title": "Open Preview",
        "category": "ANSI Text",
        "icon": "$(open-preview)"
      },
      {
        "command": "iliazeus.vscode-ansi.showPrettyToSide",
        "title": "Open Preview to the Side",
        "category": "ANSI Text",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "iliazeus.vscode-ansi.showPrettyToSide",
          "alt": "iliazeus.vscode-ansi.showPretty",
          "when": "editorLangId == ansi",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "iliazeus.vscode-ansi.showPretty",
        "key": "shift+ctrl+v",
        "mac": "shift+cmd+v",
        "when": "editorLangId == ansi"
      },
      {
        "command": "iliazeus.vscode-ansi.showPrettyToSide",
        "key": "ctrl+k v",
        "mac": "cmd+k v",
        "when": "editorLangId == ansi"
      }
    ],
    "languages": [
      {
        "id": "ansi",
        "aliases": [
          "ANSI Text"
        ],
        "extensions": [
          ".ans",
          ".ansi"
        ],
        "configuration": "./ansi.language-configuration.json"
      }
    ],
    "configuration": {
      "title": "ANSI Colors",
      "properties": {
        "iliazeus.vscode-ansi.autoPreview": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open the ANSI Text preview without having to use the keyboard shortcut to open it."
        },
        "iliazeus.vscode-ansi.autoPreviewToSide": {
          "type": "boolean",
          "default": false,
          "description": "If Auto Preview is set to True: Automatically open the ANSI Text Preview to the side. Warning: This can cause undesirable behavior!"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/vsce": "^2.18.0",
    "eslint": "^8.35.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "yarn": "^1.22.22"
  }
}